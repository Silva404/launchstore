{% extends 'layout.njk' %}

{% block styles %}
  <link rel="stylesheet" href="/styles/products/form.css">
{% endblock styles %}

{% block content %}

  <section class="login container form">
    <form action="/users/login" method="POST">
      <div class="header">
        <h3>
          Entrar
        </h3>
      </div>
      <div class="fields">
        {% include 'session/fields.njk'%}
      </div>


      <button type="submit" class="regular-button">Entrar</button>

      <div class="footer">
        <ul>
          <li>
            <a href="/users/register">Registre-se</a>
          </li>
          <li>
            <a href="/users/forgot-password">Esqueci a senha</a>
          </li>
        </ul>
      </div>
    </form>
  </section>
{% endblock content %}