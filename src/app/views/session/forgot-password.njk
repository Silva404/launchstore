{% extends 'layout.njk' %}

{% block styles %}
  <link rel="stylesheet" href="/styles/products/form.css">
{% endblock styles %}

{% block content %}
  <section class="password container form">
    <form action="/users/forgot-password" method="POST">
      <div class="header">
        <h3>
          Esqueceu a senha
        </h3>
      </div>
      <div class="fields">
        <div class="item">
          <div>Email</div>
          <div>
            <input class="input" 
            type="email" 
            name="email" 
            placeholder="Digite o email cadastrado" 
            value="{{user.email}}" 
            onblur="Validate.apply(this, 'isEmail')">
          </div>
        </div>
      </div>
      <button type="submit" class="regular-button">Recuperar senha</button>
    </form>
  </section>
{% endblock content %}