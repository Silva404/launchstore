<div class="item">
  <div>Email</div>
  <div>
    <input class="input" type="email" name="email" placeholder="Digite seu email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
  </div>
</div>

<div class="item">
  <div>Senha</div>
  <div>
    <input class="input" type="password" name="password" placeholder="Digite sua nova senha">
  </div>
</div>

<div class="item">
  <div>Repita a Senha</div>
  <div>
    <input class="input" type="password" name="passwordRepeat" placeholder="Repita sua senha">
  </div>
</div>

<input type="hidden" name="token" value="{{token}}">