{% extends 'layout.njk' %}

{% block styles %}
  <link rel="stylesheet" href="styles/products/home.css">
{% endblock styles %}

{% block content %}
  <section class="shop container">
    <h2>Ãšltimos produtos</h2>

    <div class="items">
      {% for product in products %}
        <div class="product">
          <img src="{{product.image if product.image else '//placeholder.it/500x360'}}" alt="{{product.name}}">
          {# <div class="image" style="background-image: url({{}})"> #}

          {% if product.oldPrice != product.price %}
            <div class="old-price">{{product.price}}</div>
          {% endif %}
          <h4>{{product.name}}</h4>
          <p>{{product.price}}</p>
          <a href="/products/{{product.id}}" class="regular-button">Ver Produto</a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock content %}