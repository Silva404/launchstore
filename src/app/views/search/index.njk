{% extends 'layout.njk' %}

{% import "parts/section-products.njk" as section %}

{% block styles %}
  <link rel="stylesheet" href="/styles/products/home.css">
{% endblock styles %}

{% block content %}
  <section class="search-products container">
    <aside>
      <div class="header">
        <h2>{{search.term}}</h2>
        <p>{{search.total}} Resultados</p>
      </div>

      <nav class="categories">
        <h4>Categorias</h4>
        <ul>
          {% for category in categories %}
          <li>
            <a href="/products/search?filter={{search.term}}&category={{category.id}}">{{category.name}}</a>
          </li>
          {% endfor %}
        </ul>
      </nav>
    </aside>

  {{ section.products('Ultimos produtos', 'container', products)}}
  </section>

{% endblock content %}