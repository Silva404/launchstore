{% extends 'layout.njk' %}

{% block styles %}
  <link rel="stylesheet" href="/styles/products/form.css">
{% endblock styles %}

{% block content %}

  <section class="container form">
    <form action="/products" method="POST" enctype="multipart/form-data">
      <div class="header">
        <h3>
          Cadastrar novo produto {{productId}}
        </h3>
      </div>
      <div class="fields">
        {% include 'products/fields.njk'%}
      </div>

      <button type="submit" class="regular-button">Salvar</button>
    </form>
  </section>
{% endblock content %}