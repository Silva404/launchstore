<div class="item">
  <div>Categoria</div>
  <div>
    <select name="category_id">
      {% for category in categories %}
        <option value="{{category.id}}" {% if products.category_id == category.id%} selected="selected" {% endif %}>
          {{category.name}}
        </option>
      {% endfor %}
    </select>
  </div>
</div>

<div class="item">
  <div>Avatar</div>
  <div>
    <input type="text" name="url">
  </div>
</div>

<div class="item">
  <div>Titulo</div>
  <div>
    <span>
      <input type="radio" name="tipo" value="M" {% if user.gender = "M" %} checked="checked" {% endif %}>
      Masculino
    </span>
  </div>
</div>